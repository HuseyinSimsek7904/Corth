include libs/linux_x86/io.corth
include libs/math/arithmetic.corth

// This example calculates the factorial of the number entered from the user

proc main
  int int -- int
in let argc argv in
  "Enter a number: " puts
  while getu ! do drop end
  let number in
    "Factorial of " puts number putu " is " puts number fact putu "\n" puts
  end
end 0 end

