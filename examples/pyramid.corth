include libs/core.corth
include libs/linux_x86/io.corth

proc main
  int int -- int
in let argc argv in
  10 while dup isn-zero do
    dup while dup isn-zero do
      "*" puts
    dec end drop

    "\n" puts

  dec end drop
end 0 end
