include libs/io.corth

proc main
    returns qword-type
in
    10  // Changing this number will change the size of the pyramid
    
    while
        dup bool
    do
        dup
    
        while
            dup bool
        do
            "*" puts
      
            dec
        end
      
        drop
      
	"\n" puts
      
        dec
    end
    
    drop
    0
end
